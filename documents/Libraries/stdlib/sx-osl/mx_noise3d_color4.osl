void mx_noise3d_color4(vector4 amplitude, float pivot, vector position, output color4 result)
{
    color4 value = noise("snoise", position);
    color4 amplitudeC;
    amplitudeC.rgb[0] = amplitude.x;
    amplitudeC.rgb[1] = amplitude.y;
    amplitudeC.rgb[2] = amplitude.z;
    amplitudeC.a = amplitude.w;
    result = value * amplitudeC;
}
